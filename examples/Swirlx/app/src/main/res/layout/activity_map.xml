<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:orientation="vertical">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:orientation="horizontal"
		android:background="#4c5dba"
		android:padding="5dp"
		android:gravity="center">
		<LinearLayout
			android:id="@+id/filter_view"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:gravity="center"
			android:layout_weight="1"
			android:layout_marginLeft="30dp">
			<Button
				android:id="@+id/filter_all"
				android:layout_width="75dp"
				android:layout_height="match_parent"
				android:text="All"
				android:background="@drawable/segmented_control_button"
				android:onClick="onFilterChange"/>
			<Button
				android:id="@+id/filter_geo"
				android:layout_width="75dp"
				android:layout_height="match_parent"
				android:text="Geo"
				android:background="@drawable/segmented_control_button"
				android:onClick="onFilterChange"/>
			<Button
				android:id="@+id/filter_control"
				android:layout_width="75dp"
				android:layout_height="match_parent"
				android:text="Control"
				android:background="@drawable/segmented_control_button"
				android:onClick="onFilterChange"/>
		</LinearLayout>
		<Button
			android:id="@+id/search_mag_icon"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:background="@drawable/ic_search"
			android:onClick="onShowCurrent"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/split_view_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<com.google.android.gms.maps.MapView
			android:id="@+id/map_view"
			android:layout_width="match_parent"
			android:layout_height="300dp"/>
		<LinearLayout
			android:id="@+id/resize_view"
			android:layout_width="match_parent"
			android:layout_height="15dp"
			android:orientation="vertical"
			android:background="#E9E9E9"
			android:clickable="true">
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#AAAAAA"
				android:layout_gravity="top"
				android:clickable="false"/>
			<View
				android:layout_width="32dp"
				android:layout_height="3dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:background="#000000"
				android:layout_gravity="center"
				android:clickable="false"/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#AAAAAA"
				android:layout_gravity="bottom"
				android:clickable="false"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/history_container"
			android:layout_width="match_parent"
			android:layout_height="120dp"
			android:orientation="horizontal">
			<ListView
				android:id="@+id/history_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:choiceMode="singleChoice"
				android:listSelector="#D6D6D6">
			</ListView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
